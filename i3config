# i3status
bar {
    position top
    status_command i3blocks
    strip_workspace_numbers yes
    padding 5px 15px
    tray_output none
    separator_symbol "~"
 
    colors {
        background $bg
        separator $fg
        #                  border  bg  txt   
	focused_workspace  $fg     $bg $fg
	inactive_workspace $bg     $bg $fg
	urgent_workspace   #E53935 $bg $fg
    }
}

